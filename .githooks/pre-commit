#!/bin/sh

# Generate documentation from MDX files before commit
echo "ğŸ”„ Generating documentation from MDX files..."

# Run the documentation generation script
npm run generate-docs

# Check if the script was successful
if [ $? -eq 0 ]; then
    echo "âœ… Documentation generated successfully"
    
    # Add generated docs to the commit
    git add docs/*.md
    
    echo "ğŸ“ Added generated docs to commit"
else
    echo "âŒ Documentation generation failed"
    exit 1
fi

echo "ğŸ‰ Pre-commit hook completed"