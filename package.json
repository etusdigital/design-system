{
  "name": "@BRIUS/design-system",
  "version": "2.1.30",
  "description": "Brius Design System",
  "main": "./lib/design-system.umd.js",
  "module": "./lib/design-system.es.js",
  "types": "./lib/main.d.ts",
  "scripts": {
    "dev": "vite",
    "prepare": "npm run build && npm run generate-docs && npm run install-hooks",
    "prebuild": "node scripts/prebuild.cjs",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "artifactregistry-login": "echo 'y' | npx google-artifactregistry-auth",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate-docs": "node scripts/generate-md-simple.js",
    "install-hooks": "node scripts/install-hooks.js",
    "local-link": "./scripts/local-link.sh",
    "local-link-windows": "./scripts/windows-elevate.bat"
  },
  "keywords": [],
  "author": "BRIUS Media Company",
  "license": "ISC",
  "homepage": "https://gitlab.com/brius/libraries/sute#readme",
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@babel/types": "^7.28.2",
    "@chromatic-com/storybook": "^4.1.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@storybook/manager-api": "^9.1.3",
    "@storybook/theming": "^9.1.3",
    "@storybook/vue3": "^9.1.3",
    "@storybook/vue3-vite": "^9.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/runtime-core": "^3.5.20",
    "@vue/runtime-dom": "^3.5.20",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.14",
    "cssnano": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.24",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "storybook": "^9.1.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.20",
    "vue-tsc": "^3.0.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "lib",
    "env.d.ts",
    "postcss.config.cjs",
    "tailwind.config.cjs",
    "tsconfig.app.json",
    "tsconfig.json",
    "tsconfig.node.json",
    "vite.config.ts",
    "scripts/prebuild.cjs"
  ],
  "imports": {
    "#composables": "./src/composables/index.ts",
    "#composables/*": "./src/composables/*.ts",
    "#components/*": "./src/components/*/*.vue",
    "#utils/*": "./src/utils/*.ts"
  },
  "exports": {
    "./components/*": "./src/components/*/index.ts",
    "./composables/*": "./src/composables/*.ts",
    "./styles.css": "./lib/index.css",
    ".": {
      "types": "./lib/main.d.ts",
      "import": "./lib/design-system.es.js",
      "require": "./lib/design-system.umd.js"
    }
  },
  "dependencies": {
    "@mdi/font": "^7.3.67",
    "@mdi/js": "^7.3.67",
    "@vue/reactivity": "3.5.20",
    "mdi-vue": "^3.0.13",
    "normalize.css": "^8.0.1",
    "npx": "^10.2.2"
  }
}
