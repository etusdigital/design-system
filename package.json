{
  "name": "design-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate-docs": "node scripts/generate-md-simple.cjs",
    "install-hooks": "node scripts/install-hooks.js",
    "local-link": "./scripts/local-link.sh",
    "local-link-windows": "./scripts/windows-elevate.bat"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@mdi/js": "^7.4.47",
    "@storybook/addons": "^7.6.17",
    "@storybook/blocks": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "mdi-vue": "^3.0.13",
    "normalize.css": "^8.0.1",
    "tailwindcss": "^4.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.1",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-vitest": "9.1.3",
    "@storybook/vue3-vite": "9.1.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/tsconfig": "^0.7.0",
    "playwright": "^1.55.0",
    "storybook": "9.1.3",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "imports": {
    "#composables": "./src/composables/index.ts",
    "#composables/*": "./src/composables/*.ts",
    "#components/*": "./src/components/*/*.vue",
    "#utils/*": "./src/utils/*.ts"
  },
  "exports": {
    "./components/*": "./src/components/*/index.ts",
    "./composables/*": "./src/composables/*.ts",
    "./styles.css": "./lib/index.css",
    ".": {
      "types": "./lib/main.d.ts",
      "import": "./lib/design-system.es.js",
      "require": "./lib/design-system.umd.js"
    }
  }
}
