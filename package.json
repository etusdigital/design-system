{
    "name": "@BRIUS/design-system",
    "version": "2.1.19",
    "description": "Brius Design System",
    "engines": {
        "node": ">=18.0.0 <=23.11.1"
    },
    "main": "./lib/design-system.umd.js",
    "module": "./lib/design-system.es.js",
    "types": "./lib/main.d.ts",
    "scripts": {
        "dev": "vite",
        "prepare": "npm run build",
        "prebuild": "node scripts/prebuild.cjs",
        "build": "run-p type-check build-only",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "local-link": "./scripts/local-link.sh",
        "local-link-windows": "./scripts/windows-elevate.bat"
    },
    "keywords": [],
    "author": "BRIUS Media Company",
    "license": "ISC",
    "homepage": "https://gitlab.com/brius/libraries/sute#readme",
    "peerDependencies": {
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@babel/types": "^7.22.5",
        "@chromatic-com/storybook": "^3.2.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/addon-links": "^8.6.14",
        "@storybook/blocks": "^8.6.14",
        "@storybook/manager-api": "^8.6.14",
        "@storybook/theming": "^8.6.14",
        "@storybook/vue3": "^8.6.14",
        "@storybook/vue3-vite": "^8.6.14",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "@tsconfig/node22": "^22.0.1",
        "@types/node": "^22.15.18",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vue/runtime-core": "^3.4.0",
        "@vue/runtime-dom": "^3.4.0",
        "@vue/tsconfig": "^0.7.0",
        "autoprefixer": "^10.4.14",
        "cssnano": "^7.0.7",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.24",
        "postcss-import": "^16.1.0",
        "postcss-nesting": "^13.0.1",
        "rollup-plugin-typescript2": "^0.36.0",
        "storybook": "^8.6.14",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vue": "^3.5.14",
        "vue-tsc": "^2.0.21"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "src",
        "lib",
        "env.d.ts",
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tsconfig.app.json",
        "tsconfig.json",
        "tsconfig.node.json",
        "vite.config.ts",
        "scripts/prebuild.cjs"
    ],
    "imports": {
        "#composables": "./src/composables/index.ts",
        "#composables/*": "./src/composables/*.ts",
        "#components/*": "./src/components/*/*.vue",
        "#utils/*": "./src/utils/*.ts"
    },
    "exports": {
        "./components/*": "./src/components/*/index.ts",
        "./composables/*": "./src/composables/*.ts",
        "./styles.css": "./lib/index.css",
        ".": {
            "types": "./lib/main.d.ts",
            "import": "./lib/design-system.es.js",
            "require": "./lib/design-system.umd.js"
        }
    },
    "dependencies": {
        "@mdi/font": "^7.3.67",
        "@mdi/js": "^7.3.67",
        "@storybook/addon-themes": "^8.6.14",
        "@storybook/test": "^8.6.14",
        "@vue/reactivity": "^3.5.14",
        "mdi-vue": "^3.0.13",
        "normalize.css": "^8.0.1"
    }
}
