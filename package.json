{
	"name": "@ETUS/eds",
	"version": "1.0.0",
	"type": "module",
	"description": "ETUS Design System - Vue 3 component library with TypeScript and Tailwind CSS v4",
	"engines": {
		"node": ">=22.0.0"
	},
	"main": "./lib/design-system.umd.js",
	"module": "./lib/design-system.es.js",
	"types": "./lib/main.d.ts",
	"scripts": {
		"dev": "vite",
		"prebuild": "node scripts/prebuild.cjs",
		"build": "run-p type-check build-only",
		"preview": "vite preview",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit -p tsconfig.app.json",
		"local-link": "./scripts/local-link.sh",
		"local-link-windows": "./scripts/windows-elevate.bat",
		"format:md": "prettier --write \"**/*.md\"",
		"lint:md": "markdownlint --fix \"**/*.md\"",
		"check:md": "prettier --check \"**/*.md\" && markdownlint \"**/*.md\""
	},
	"keywords": [
		"vue",
		"vue3",
		"components",
		"ui",
		"design-system",
		"tailwindcss",
		"typescript"
	],
	"author": "ETUS",
	"license": "ISC",
	"homepage": "https://github.com/etus-media/design-system#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/etus-media/design-system.git"
	},
	"dependencies": {
		"@floating-ui/vue": "^1.1.8",
		"@mdi/font": "^7.4.47",
		"@mdi/js": "^7.4.47",
		"@vue/reactivity": "^3.5.18",
		"@vueuse/core": "^13.6.0",
		"mdi-vue": "^3.0.13",
		"normalize.css": "^8.0.1",
		"uuid": "^11.1.0"
	},
	"peerDependencies": {
		"vue": "^3.5.18"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@tsconfig/node22": "^22.0.1",
		"@types/node": "^22.15.18",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/tsconfig": "^0.7.0",
		"autoprefixer": "^10.4.20",
		"cssnano": "^7.1.0",
		"markdownlint-cli": "^0.45.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2",
		"vite": "^7.1.0",
		"vite-plugin-dts": "^4.5.4",
		"vue": "^3.5.17",
		"vue-tsc": "^3.0.5"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"src",
		"lib",
		"env.d.ts",
		"postcss.config.cjs",
		"tsconfig.app.json",
		"tsconfig.json",
		"tsconfig.node.json",
		"vite.config.ts",
		"scripts/prebuild.cjs",
		"README.md"
	],
	"imports": {
		"#composables": "./src/composables/index.ts",
		"#composables/*": "./src/composables/*.ts",
		"#components/*": "./src/components/*/*.vue",
		"#modules/*": "./src/modules/*",
		"#utils": "./src/utils/index.ts",
		"#utils/*": "./src/utils/*.ts"
	},
	"exports": {
		"./styles.css": "./lib/index.css",
		"./composables": {
			"types": "./lib/composables/index.d.ts",
			"import": "./lib/composables/index.js",
			"default": "./lib/composables/index.js"
		},
		"./core": {
			"types": "./lib/modules/core/index.d.ts", 
			"import": "./lib/modules/core/index.js",
			"default": "./lib/modules/core/index.js"
		},
		"./forms": {
			"types": "./lib/modules/forms/index.d.ts",
			"import": "./lib/modules/forms/index.js", 
			"default": "./lib/modules/forms/index.js"
		},
		"./data-display": {
			"types": "./lib/modules/data-display/index.d.ts",
			"import": "./lib/modules/data-display/index.js",
			"default": "./lib/modules/data-display/index.js"
		},
		"./feedback": {
			"types": "./lib/modules/feedback/index.d.ts",
			"import": "./lib/modules/feedback/index.js",
			"default": "./lib/modules/feedback/index.js"
		},
		"./navigation": {
			"types": "./lib/modules/navigation/index.d.ts",
			"import": "./lib/modules/navigation/index.js",
			"default": "./lib/modules/navigation/index.js"
		},
		"./overlay": {
			"types": "./lib/modules/overlay/index.d.ts",
			"import": "./lib/modules/overlay/index.js",
			"default": "./lib/modules/overlay/index.js"
		},
		"./layout": {
			"types": "./lib/modules/layout/index.d.ts",
			"import": "./lib/modules/layout/index.js",
			"default": "./lib/modules/layout/index.js"
		},
		".": {
			"types": "./lib/main.d.ts",
			"import": "./lib/design-system.es.js",
			"require": "./lib/design-system.umd.js"
		}
	}
}
